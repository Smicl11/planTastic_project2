<!DOCTYPE html>
<html lang='en'>
<head>
  <title>planTastic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://js.stripe.com/v2/' %>
  <%= csrf_meta_tags %>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
</head>
<body>

  <!-- Basic Navbar -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <%= link_to "planTastic", users_path, class: "navbar-brand" %>
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to "My Profile", user_path(current_user) %></li>
          <li><%= link_to "Create Event", new_event_path %></li>
        <% else %>
          <li><%= link_to "Create Account", new_user_path %></li>
        <% end %>
        <li><%= link_to "See Events", events_path%></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to "Log Out", logout_path %></li>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>


  <!-- Flash Message -->
  <% flash.each do |type, message| %>
    <div class="alert <%= alert_class_for(type) %> alert-dismissible fade in">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= message %>
    </div>
  <% end %>


  <!-- Pages render in here -->
  <%= yield %>
  <!-- End page render -->

  <div class="container">
    <div class="row">
      <hr class="featurette-divider">
      <footer>
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p>&copy; 2016 planTastic, Inc. </p>
      </footer>
    </div>
  </div>


</body>
</html>
