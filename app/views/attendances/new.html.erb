<div class = "container" >
  <div class = "col-sm-12">
    <h1><%= @event.title %></h1>
    <div>
      <%= form_for @attendance, url: create_attendance_path do |f| %>
    </div><br>
    <div>
      <%= f.label :contribution, "I can contribute:" %>
      <%= f.select :contribution, [['snacks'],['gas money'],['beverages'],['decorations'],['tents'],['music']], class: 'form-control'%>
    </div>
    <div>
      <%= f.submit "Attend Event", class:'btn btn-primary' %>
    </div>
      <% end %>
  </div>
</div>
