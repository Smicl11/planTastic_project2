<div class="container">
  <div class="col-md-6">
    <div class="row">
      <h1>Log In</h1>
    </div>
    <hr>
    <div class="row">
      <%= simple_form_for @user, as: 'user' do |f| %>
        <%= f.input :email, placeholder: "email@email.com"%>
        <%= f.input :password, placeholder: "Password"%>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
