<%= simple_form_for @user do |f| %>
  <%= f.input :first_name, placeholder: "First Name"%>
  <%= f.input :last_name, placeholder: "Last Name"%>
  <%= f.input :email, placeholder: "email@email.com"%>
  <%= f.input :password, placeholder: "Password"%>
  <%= f.input :password_confirmation, placeholder: "Confirm Password"%>
  <%= f.input :profile_image, placeholder: "www.domain.com/image.jpg" %>
  <%= f.button :submit %>
<% end %>
