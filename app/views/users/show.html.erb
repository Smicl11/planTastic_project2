<div class="container user-container">
  <div class="col-md-4">
    <div class="row">
      <%= image_tag @user.profile_image, class: "img-responsive img-circle"%>
    </div>
    <div class="row">
      <h3>Welcome, <%= @user.first_name %></h3>
    </div>
    <div class="row">
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>First Name:</td>
            <td><%= @user.first_name %></td>
          </tr>
          <tr>
            <td>Last Name:</td>
            <td><%= @user.last_name%></td>
          </tr>
          <tr>
            <td>Email Address:</td>
            <td><%= @user.email%></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="btn-group btn-group-justified" role="group">
      <div class="inner"><%= button_to "Edit Profile", user_edit_path(@user), :method => 'get', class: "btn btn-small btn-success" %></div>
      <div class="inner"><%= button_to "New Event", new_event_path(@user), :method => 'get', class: "btn btn-small btn-primary" %></div>
      <div class="inner"><%= button_to "Delete Profile", destroy_user_path(@user),data: {:confirm=>'Are you sure you want to delete your profile? This cannot be undone.'}, :method => 'delete', class: "btn btn-small btn-danger" %></div>
    </div>
  </div>
  <div class="col-md-1">

  </div>
  <div class="col-sm-6">
    <div class="row">
      <h1>Your Events</h1>
    <% if @user.events.empty? %>
    <p>You currently aren't attending any upcoming events</p>
    <% end %>
    <% else %>
    </div>
    <div class="col-md-12">
      <% @user.events.each do |t|%>
        <div class="row event">
          <div class="col-md-4">
            <%= image_tag (t.photo), class: "img-responsive img-thumbnail" %>
          </div>
          <div class="col-md-6">
            <h3><%=link_to "#{t.title}", event_path(t)%></h3>
            <p><%= "#{t.description}" %></p>
            <p>Location: <%= "#{t.location}" %></p>
            <hr>
          </div>
        </div>
      <%end%>
  </div>
</div>
