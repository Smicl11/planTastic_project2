

<!-- Profile side bar -->
<div class="container user-container">
  <div class="col-md-4">
    <div class="row">
      <%= image_tag @user.profile_image, class: "img-responsive img-thumbnail"%>
    </div>
    <div class="row">
      <h3>Welcome, <%= @user.first_name %></h3>
    </div>
    <div class="row">
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>First Name:</td>
            <td><%= @user.first_name %></td>
          </tr>
          <tr>
            <td>Last Name:</td>
            <td><%= @user.last_name%></td>
          </tr>
          <tr>
            <td>Email Address:</td>
            <td><%= @user.email%></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <%= button_to "Edit Profile", user_edit_path(@user), :method => 'get', class: "btn btn-small btn-block btn-success" %>
      <%= button_to "New Event", new_event_path(@user), :method => 'get', class: "btn btn-small btn-block btn-primary" %>
      <%= button_to "Delete Profile", destroy_user_path(@user),data: {:confirm=>'Are you sure you want to delete your profile? This cannot be undone.'}, :method => 'delete', class: "btn btn-small btn-block btn-danger" %>
    </div>
  </div>
  <div class="col-md-1">

  </div>
  <div class="col-md-6">
    <div class="row">
      <h1>Your Events.</h1>
    </div>
    <div class="row">
      <p>
        All the events will show up here!
      </p>
    </div>
  </div>
</div>
