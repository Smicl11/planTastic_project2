<div class="container">
  <h1>Welcome to the Events page!</h1>
  <div class="col-md-12">
    <% @event.each do |t|%>
      <div class="row">
        <div class="col-md-4">
          <%= image_tag (t.photo), class: "img-responsive img-thumbnail" %>
        </div>
        <div class="col-md-6">
          <h3><%=link_to "#{t.title}", event_path(t)%></h3>
          <p><%= "#{t.description}" %></p>
          <p>Location: <%= "#{t.location}" %></p>
        </div>
      </div>
    <%end%>
  </div>
</div>
