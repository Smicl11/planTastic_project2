<div class="eventShow">
  <div class="col-lg-6">

    <div>
      <h1 class="eventTitle"><%= @event.title%>
      <%= image_tag (@event.photo), class: "eventPic"%>
      <p class="eventLocation"> <%= @event.location%></p> </br>
      <p class="date"> <%= @event.event_date%> <%= @event.event_time%></p>
      <p class="description"> <%= @event.description%></p>
      <%= link_to "Edit", edit_event_path(@event)%>
    </div>
  </div>
</div>
