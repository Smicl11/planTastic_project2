<div class="container events-container">
  <div class="row">
    <h1 class="eventTitle"><%= @event.title%></h1>
  </div>
  <div class="col-md-6">
    <div class="row">
      <%= image_tag (@event.photo), class: "img-responsive img-thumbnail"%>
    </div>
  </div>
  <div class="col-md-6">
    <h6>Description:</h6><%= @event.description%>
    <h6>Location:</h6><%= @event.location%>
    <h6>Date:</h6><%= @event.event_date%>
    <h6>Time:</h6><%= @event.event_time%>
    <% if current_user%>
      <%= button_to "Edit", edit_event_path(@event), :method => "get", class: "btn btn-small btn-success"%>
      <%= button_to "Delete Event", delete_event_path, data: {:confirm=>'Are you sure you want to delete this event?'}, :method => "delete", class: "btn btn-small btn-danger" %>
    <% else %>
      <%= button_to "Login", login_path, :method => "get", class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="row">
      <h3>Comments</h3>
    </div>
    <% @comments.each do |comment|%>
      <div class="row comment">
        <div class="row">
          <strong><h5><%= @user.first_name%> says:</h5></strong>  
        </div>
        <p><%= comment.description %></p>
      </div>
    <% end %>
    <%= button_to "Add Comment", new_comment_path(@event), :method => "get", class: "btn btn-small btn-primary"%>
  </div>
</div>
